<Window
  x:Class="D3D12HelloTriangleWpfD3DImage.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:i="clr-namespace:System.Windows.Interop;assembly=PresentationCore"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:local="clr-namespace:D3D12HelloTriangleWpfD3DImage"
  mc:Ignorable="d"
  Title="MainWindow" Height="450" Width="800">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="32" />
    </Grid.RowDefinitions>
    <Image Grid.Row="0">
      <Image.Source>
        <i:D3DImage x:Name="D3DImage" />
      </Image.Source>
    </Image>
    <Slider
      Grid.Row="1" x:Name="Slider" VerticalAlignment="Stretch" Minimum="0.0" Maximum="1.0" Value="1.0"
      ValueChanged="Slider_OnValueChanged" />
  </Grid>
</Window>